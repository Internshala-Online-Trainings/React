{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "predeploy": ["npm run build"],
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
